.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
}
.content {
  flex: 1;
  overflow: auto;
}
 
.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.header>text {
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid black;
  border-left: 1rpx solid black;
}
/* 内容的行高要高一点 */
.dataRow>text {
  height: 150rpx;
}
/* 最后一列补齐边框 */
.lastCol {
  border-right: 1rpx solid black;
}
/* 价格单独设置短一点 */
.price {
  width: 100rpx !important;
}

.mask {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
}

.popup {
  position: fixed;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 60%;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
  padding: 30rpx;
}

.popup-btns {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.input {
  height: 60rpx;
  border: 0.0625rem solid #d1d9e0;
  padding-left: 15rpx;
  box-sizing: border-box;
  border-radius: 0.375rem;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.picker {
  height: 80rpx;
  border: 0.0625rem solid #d1d9e0;
  padding: 15rpx;
  box-sizing: border-box;
  border-radius: 0.375rem;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.dropdown {
  border: 1px solid #ccc;
  width: 200px;
  position: relative;
}
.dropdown-title {
  padding: 10px;
  background: #f9f9f9;
  cursor: pointer;
}
.dropdown-list {
  position: absolute;
  width: 100%;
  background: #fff;
  border: 1px solid #ccc;
  z-index: 10;
}
.checkbox-item {
  display: block;
  padding: 5px 10px;
}
