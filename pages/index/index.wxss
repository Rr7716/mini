.course_container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
}
.course_top {
  margin-top: 120rpx;
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}
.course_main {
  flex: 1;
  overflow: auto;
  margin-left: 10rpx;
}
.show_total{
  margin-top: 50rpx;
}
.header {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.last_col {
  border-right: 1rpx solid black;
}

.block {
  height: 90rpx;
  width: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid black;
  border-left: 1rpx solid black;
}

/* 其实本来已经居中显示了, 但因为英文字母太长, 看起来不像居中, 所以在最里面再加一个view, 利用padding来让视觉效果上看是居中的 */
.course_content {
  height: 90rpx;
  width: 90rpx;
  padding-top: 8rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  font-size: 25rpx;
}

.lastRow {
  border-bottom: 1rpx solid black;
}

.active {
  background-color: #4caf50; /* 高亮颜色 */
  color: white;
}

.students_checkbox_title {
  margin-left: 50rpx;
  margin-top: 100rpx;
  margin-bottom: 20rpx;
  color: rgba(69, 90, 100, 0.6);
}

.popup_btn_view {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.popup_btn_view > view {
  width: 200rpx;
}

.time_view {
  height: 50rpx;
  width: 230rpx;
  padding: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(253, 243, 146);
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.course_notice {
  position: relative;
}
.course_notice>.tick {
  position: absolute;   /* 子元素绝对定位 */
  right: 1rpx;             /* 贴到右边 */
  bottom: 0;            /* 贴到底部 */
}

.no_left {
  background-color: rgb(238, 10, 36);
  color: white;
}