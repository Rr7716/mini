<view class="container">

  <!-- 标题 -->
  <view class="header">
    <text class="title">📋 任务清单</text>
  </view>

  <!-- 添加任务 -->
  <view class="add-box">
    <input class="input" placeholder="输入新任务..." bindinput="onInputChange" value="{{newTask}}" />
    <button class="btn-add" bindtap="addTask">添加</button>
  </view>

  <!-- 任务列表 -->
  <view class="list">
    <block wx:for="{{tasks}}" wx:key="id">
      <view class="item">
        <text class="task-text">{{item.text}}</text>

        <!-- 操作按钮 -->
        <view class="actions">
          <button class="btn-edit" size="mini" bindtap="editTask" data-id="{{item.id}}">编辑</button>
          <button class="btn-delete" size="mini" bindtap="deleteTask" data-id="{{item.id}}">删除</button>
        </view>
      </view>
    </block>

    <!-- 空状态 -->
    <view wx:if="{{tasks.length === 0}}" class="empty">
      <text>✨ 暂无任务，快来添加吧！</text>
    </view>
  </view>

</view>