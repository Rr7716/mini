.container {
  height: 100vh;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 99;
}

/* 弹窗 */
.popup {
  position: fixed;
  left: 0;
  bottom: -300rpx;  /* 初始隐藏在屏幕下方 */
  width: 100%;
  background: #fff;
  transition: bottom 0.3s ease;
  z-index: 100;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

/* 弹出时 */
.popup-show {
  bottom: 0;
}

/* 弹窗内容 */
.popup-content {
  padding: 30rpx;
  text-align: center;
}
