.container {
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

/* 标题 */
.header {
  margin-bottom: 30rpx;
  text-align: center;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 添加框 */
.add-box {
  display: flex;
  margin-bottom: 30rpx;
}
.input {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  background: #fff;
}
.btn-add {
  margin-left: 15rpx;
  background: #07c160; /* 微信绿 */
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 列表 */
.list {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  padding: 20rpx;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.item:last-child {
  border-bottom: none;
}
.task-text {
  font-size: 30rpx;
  color: #333;
}
.actions button {
  margin-left: 10rpx;
}
.btn-edit {
  background: #409eff;
  color: #fff;
  border-radius: 6rpx;
}
.btn-delete {
  background: #ff4d4f;
  color: #fff;
  border-radius: 6rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}
